<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="com.example.fianance.MainPageController">
    <children>
        <Label text="Stock Management" style="-fx-font-size: 24px;"/>
        <TableView fx:id="stockTable">
            <columns>
                <TableColumn fx:id="symbolColumn" text="Stock Symbol" />
                <TableColumn fx:id="priceColumn" text="Price" />
            </columns>
        </TableView>
        <Button text="Scrape Stock Data" onAction="#handleStockAction"/>
    </children>
    <VBox.margin>
        <Insets top="10" left="10" right="10" bottom="10"/>
    </VBox.margin>
</VBox>
